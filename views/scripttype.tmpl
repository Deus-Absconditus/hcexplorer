{{define "scripttype"}}
<!DOCTYPE html>
<html lang="en">

{{template "html-head" "script type"}}
<body>
    {{template "navbar"}}

    <div class="container">

        <div class="row">
        	<div class="col-md-6">
        		<div id="chart1" style="width: 80%;height:300px;margin:0 auto;"></div>
        	</div>

        	<div class="col-md-6">
        		<div id="chart2" style="width: 80%;height:300px;margin:0 auto;"></div>
        	</div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div id="chart3" style="width: 80%;height:300px; margin:0 auto;"></div>
            </div>

            <div class="col-md-6">
                <div id="chart4" style="width: 80%;height:300px; margin:0 auto;"></div>
            </div>
        </div>

        <div class="row">
            <table  class="table table-hover table-bordered ">
                <thead>
                    <tr class="table-info">
                    <th>脚本类型</th>
                    <th>输入金额</th>
                    <th>输出金额</th>
                    <th>输入数量</th>
                    <th>输出数量</th>
                </tr>
                </thead>
                <tbody id="script_info">
                    
                </tbody>
            </table>
        </div>
    </div>

    <script>
        $.ajax({
            url: "/explorer/scripttypejson",
            data:{},
            type: "GET",
            dataType:'json',
            success:function(result){
                var globals =result;
                console.log(globals)
                console.log(globals['Date'])
                console.log(globals.Type)
                console.log(globals['Amount_type_vouts'])
                var chart1 = echarts.init(document.getElementById('chart1'));
                var chart2 = echarts.init(document.getElementById('chart2'));
                var chart3 = echarts.init(document.getElementById('chart3'));
                var chart4 = echarts.init(document.getElementById('chart4'));
                // 指定图表的配置项和数据
                var option1 = {
                    title : {
                        text: '数量统计',
                        subtext: '输入数量',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        right:20,
                        top:'bottom',
                        data: globals['Type']
                    },
                    series : [
                        {
                            name: '输入数量',
                            type: 'pie',
                            radius : '65%',
                            center: ['30%', '60%'],
                            label:{
                              show:false
                            },
                             labelLine: {
                                normal: {
                                    show: false
                                }
                            },
                            data:globals['Amount_type_vins'],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                var option2 = {
                    title : {
                        text: '数量统计',
                        subtext: '输出数量',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        right:20,
                        top:'bottom',
                        data: globals['Type']
                    },
                    series : [
                        {
                            name: '输出数量',
                            type: 'pie',
                            radius : '65%',
                            center: ['30%', '60%'],
                            label:{
                              show:false
                            },
                             labelLine: {
                                normal: {
                                    show: false
                                }
                            },
                            data:globals['Amount_type_vouts'],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                var option3 = {
                    title : {
                        text: '金额统计',
                        subtext: '输入金额',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        right:20,
                        top:'bottom',
                        data: globals['Type']
                    },
                    series : [
                        {
                            name: '输入金额',
                            type: 'pie',
                            radius : '65%',
                            center: ['30%', '60%'],
                            label:{
                              show:false
                            },
                             labelLine: {
                                normal: {
                                    show: false
                                }
                            },
                            data:globals['Sum_type_vins'],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                var option4 = {
                    title : {
                        text: '金额统计',
                        subtext: '输出金额',
                        x:'center'
                    },
                    tooltip : {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        right:20,
                        top:'bottom',
                        data: globals['Type']
                    },
                    series : [
                        {
                            name: '输出金额',
                            type: 'pie',
                            radius : '65%',
                            center: ['30%', '60%'],
                            label:{
                              show:false
                            },
                             labelLine: {
                                normal: {
                                    show: false
                                }
                            },
                            data:globals['Num_type_vouts'],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                chart1.setOption(option1);
                chart2.setOption(option2);
                chart3.setOption(option3);
                chart4.setOption(option4);


                var type_arr = globals.Type;
                var dataMap = globals.ScriptInfo;
                
                for(j = 0; j < type_arr.length; j++) {
                    console.log("here")
                    console.log(j);
                    type = type_arr[j];

                    var rowStr = "<tr>"+
                        "<td>"+type+"</td>"+
                        "<td>"+dataMap[type]['amountvins']+"</td>"+
                        "<td>"+dataMap[type]['amountvouts']+"</td>"+
                        "<td>"+dataMap[type]['sumvins']+"</td>"+
                        "<td>"+dataMap[type]['sumvouts']+"</td>"+
                    "</tr>";
                    console.log(rowStr);
                    $("#script_info").append(rowStr);

                }
            },
            error:function(err){
                alert(err)
            }
        })

    </script>

{{template "footer"}}

</body>

</html>
{{ end }}
